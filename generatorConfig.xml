<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>

  <context id="MainTables" defaultModelType="flat"  targetRuntime ="MyBatis3">

      <!-- 生成するファイルの文字コードは UTF-8 -->
    <property name="javaFileEncoding" value="UTF-8" />
    <!-- mysql -->
    <property name="autoDelimitKeywords" value="true" />
    <property name="beginningDelimiter" value="`"/>
    <property name="endingDelimiter" value="`"/>

    <plugin type="org.mybatis.generator.plugins.SerializablePlugin" />
    <plugin type="org.mybatis.generator.plugins.CaseInsensitiveLikePlugin" />

    <!-- 生成される Java ファイルのコメントに日付を付与しない -->
    <commentGenerator>
      <property name="suppressDate" value="true" />
      <property name="addRemarkComments" value="true"/>
    </commentGenerator>

    <jdbcConnection connectionURL="jdbc:mysql://localhost:3306/dbname"
    driverClass="com.mysql.jdbc.Driver"
    password="fugafuga"
    userId="hogehoge" />
    <javaModelGenerator targetPackage="com.api.sns.cheese.domain" targetProject="cheese-sns-api/src/main/java">
    	<property name="trimStrings" value="true" />
    </javaModelGenerator>
    <sqlMapGenerator targetPackage="com.api.sns.cheese.repository" targetProject="cheese-sns-api/src/main/resources" />
    <javaClientGenerator targetPackage="com.api.sns.cheese.repository" targetProject="cheese-sns-api/src/main/java" type="XMLMAPPER" />

    <!-- 対象テーブル -->
    <table tableName="test"></table>
    <table tableName="t_account"></table>
    <table tableName="t_activity">
        <columnOverride column="activity_type" javaType="com.api.sns.cheese.enums.ActivityTypeEnum" />
    </table>
    <table tableName="t_bookmark"></table>
    <table tableName="t_contact"></table>
    <table tableName="t_follow"></table>
    <table tableName="t_follow_tag"></table>
    <table tableName="t_login_history"></table>
    <table tableName="t_photo"></table>
    <table tableName="t_photo_comment"></table>
    <table tableName="t_photo_comment_like"></table>
    <table tableName="t_photo_like"></table>
    <table tableName="t_tag"></table>
    <table tableName="t_tag_photo"></table>

  </context>
</generatorConfiguration>